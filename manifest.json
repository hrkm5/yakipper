  {
    "name": "Yakipper",
    "version": "1.4.2",
    "description": "This extension helps you copy and paste URL including Japanese",

    "permissions": [
        "tabs"
      ],

    "content_scripts": [
       {
        "matches": ["https://*/*"],
          "js": ["content.js"]
        }
    ],
    
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },

    "commands": {
      "toggel-switch-language": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "windows": "Ctrl+Shift+S",
          "mac": "Command+Shift+S",
          "chromeos": "Ctrl+Shift+S",
          "linux": "Ctrl+Shift+S"
        },
        "description": "Switch Language"
      },
      "toggle-copy-to-clipboard": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "windows": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y",
          "chromeos": "Ctrl+Shift+Y",
          "linux": "Ctrl+Shift+Y"
        },
        "description": "CopyToClipboard"
      }
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/yakisoba_128.png"
      },
      "icons": {
        "16": "images/yakisoba_16.png",
        "32": "images/yakisoba_32.png",
        "48": "images/yakisoba_64.png",
        "128": "images/yakisoba_128.png"
      },
    "manifest_version": 3
}