  {
    "name": "Yakipper",
    "version": "1.2.1",
    "description": "This extension helps you copy and paste URL including Japanese",

    "permissions": [
        "tabs",
        "clipboardWrite"
      ],

    "content_scripts": [
       {
        "matches": ["https://support.box.com/*","https://developer.box.com/*","https://ja.developer.box.com/*"],
        "js": ["content.js"]
        }
    ],
    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "commands": {
      "toggel-switch-language": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "windows": "Ctrl+Shift+S",
          "mac": "Command+Shift+S",
          "chromeos": "Ctrl+Shift+S",
          "linux": "Ctrl+Shift+S"
        },
        "description": "Switch Language"
      },
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "windows": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y",
          "chromeos": "Ctrl+Shift+Y",
          "linux": "Ctrl+Shift+Y"
        },
        "description": "Copy URL&Title"
      }
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/yakisoba_16.png",
            "32": "images/yakisoba_32.png",
            "48": "images/yakisoba_64.png",
            "128": "images/yakisoba_128.png"
          }
      },
      "icons": {
        "16": "images/yakisoba_16.png",
        "32": "images/yakisoba_32.png",
        "48": "images/yakisoba_64.png",
        "128": "images/yakisoba_128.png"
      },
    "manifest_version": 2
}